    "data_processing_chains": [
        {
            "name": "chain1",
            "steps": [
                {
                    "type": "mqtt_source",
                    "source_name": "mqtt1",
                    "topic": "topic1"
                },
                {
                    "type": "sql_query",
                    "source_name": "db1",
                    "query": "SELECT * FROM processing_table"
                },
                {
                    "type": "python_script",
                    "script_path": "path/to/script1.py"
                }
            ],
            "targets": ["target1", "target2"]
            // Weitere Ziele für chain1...
        },
        {
            "name": "chain2",
            "steps": [
                // Schritte in chain2...
            ],
            "targets": ["target1"]
            // Weitere Ziele für chain2...
        }
        // Weitere Verarbeitungsketten...
    ]
